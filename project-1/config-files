#!/bin/bash
# this script will clone the repository
if [[ $EUID -ne 0 ]]; then
    echo "$0 is not running as root. Use sudo."
    exit 2
fi

# check if git is executable
if ! [[ -x "$(command -v git)" ]]; then
    echo "Error: git is not executable." >&2
    exit 1
# check if git is installed
elif ! [[ -e "$(command -e git)" ]]; then
    echo "Error: git is not installed." >&2
    exit 1
# check if the repository already exists
elif [[ -d "2420-as2-starting-files" ]]; then
    echo "The repository already exists" >&2
# clone the repository
else
    git clone https://gitlab.com/cit2420/2420-as2-starting-files.git
    echo "Successfully cloned the repository"
fi
